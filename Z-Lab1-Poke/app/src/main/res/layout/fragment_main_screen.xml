<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainScreenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@color/colorPrimaryRed" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <View
                    android:id="@+id/view_separator"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignBottom="@id/view_separator"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimaryRed" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimaryBlack" />

                <ImageView
                    android:id="@+id/imageView_playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/button_play" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:text="Quiz 'Em All"
            android:textColor="@color/colorBlack"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/imageView_settingButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_setting" />

        <TextView
            android:id="@+id/textView_main_currentScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="100sp"
            android:typeface="serif" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp">

            <TextView
                android:id="@+id/textView_main_highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH SCORE"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/textView_main_highScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="80sp"
                android:typeface="serif" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Copyright Â© TechKids 2016"
            android:textColor="@color/colorBlack"
            android:textSize="40sp" />

    </RelativeLayout>

</FrameLayout>
