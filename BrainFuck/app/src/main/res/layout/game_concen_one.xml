<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorCyanLight"
    tools:context="com.example.windzlord.brainfuck.screens.games.concentration.ConcenOne">

    <com.example.windzlord.brainfuck.layout.GameStatusLayout
        android:id="@+id/layout_game_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:going_count="1"
        app:going_max="10"
        app:going_progress="1"
        app:time_count="100"
        app:time_max="5000"
        app:time_progress="5000" />


    <RelativeLayout
        android:id="@+id/layout_score"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@color/colorWhite" />

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textColor="@color/colorBlackLight"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_bonus"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="+0"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorYellow"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/layout_game"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/layout_score"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_corner_background_outline_concen"
            android:layout_margin="5dp"
            android:layout_weight="50">
            <TextView
                android:id="@+id/tv_left_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text=""
                android:textColor="@color/colorCyanDark"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bot"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/custom_corner_background_outline_concen"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <TextView
                android:id="@+id/tv_right_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text=""
                android:textColor="@color/colorCyanDark"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/layout_game"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp">
        <TextView
            android:layout_width="0dp"
            android:text="Left card - Number 'Even'"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlackLight"
            android:layout_weight="50"
            />
        <TextView
            android:layout_width="0dp"
            android:text="Right card - Vowel 'Letter'"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlackLight"
            android:layout_weight="50"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_corner_background_10dip_no"
            android:layout_margin="5dp"
            android:layout_weight="50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text="NO"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yes"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/custom_corner_background_10dip_yes"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text="YES"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_welcome"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:visibility="invisible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@color/colorYellow" />

        <TextView
            android:id="@+id/textView_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:text="3"
            android:textColor="@color/colorBlackLight"
            android:textSize="80sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_next"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:visibility="invisible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@color/colorYellow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/game_ic_color_cross" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_pause"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="230dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_pause_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorYellow" />

            <View
                android:id="@+id/view_pause_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorYellow" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="PAUSE"
            android:textColor="@color/colorAccent"
            android:textSize="50sp"
            android:textStyle="bold" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/game_ic_pause_circle_outline"
            app:cb_color="@color/colorCyanLight" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button_resume"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/game_ic_play_circle_outline"
            app:cb_color="@color/colorCyanLight" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button_exit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/game_ic_remove_circle_outline"
            app:cb_color="@color/colorCyanLight" />

    </RelativeLayout>

</RelativeLayout>
