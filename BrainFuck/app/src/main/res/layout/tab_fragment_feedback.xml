<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/feedback_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryMain"
    tools:context=".screens.tabs.FragmentAnalyst">
<RelativeLayout
    android:background="#aa66cc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:text="WELCOME"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView_feedback"
        android:layout_width="match_parent"

        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageView_welcome"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/z_background_welcome_image_feedback" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/text_box_main"/>

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to begin?\nTrain your core cognitive \nfunctions today ."
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp"
                android:id="@+id/textView2" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    <ScrollView
        android:layout_marginBottom="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_corner_background_3_gray"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:textColor="#ffff"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:text="Calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                    android:id="@+id/progressbar_calculation"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:rcBackgroundColor="@color/colorDark"
                    app:rcIconBackgroundColor="@color/custom_progress_red_header"
                    app:rcIconPadding="0dp"
                    app:rcIconSize="40dp"
                    app:rcIconSrc="@drawable/ic_z_calculator"
                    app:rcMax="2000"
                    app:rcProgressColor="@color/custom_progress_red_progress"
                    app:rcRadius="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView_calcu_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="100"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:textColor="#ffff"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:text="Calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                    android:id="@+id/progressbar_concen"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:rcBackgroundColor="@color/colorDark"
                    app:rcIconBackgroundColor="@color/custom_progress_green_progress"
                    app:rcIconPadding="3dp"
                    app:rcIconSize="40dp"
                    app:rcIconSrc="@drawable/ic_z_concentration"
                    app:rcMax="1500"
                    app:rcProgressColor="@color/custom_progress_green_header"
                    app:rcRadius="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView_concen_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="30"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:textColor="#ffff"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:text="Calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                    android:id="@+id/progressbar_memory"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:rcBackgroundColor="@color/colorDark"
                    app:rcIconBackgroundColor="@color/custom_progress_orange_progress"
                    app:rcIconPadding="5dp"
                    app:rcIconSize="40dp"
                    app:rcIconSrc="@drawable/ic_z_memory"
                    app:rcMax="2000"
                    app:rcProgressColor="@color/custom_progress_orange_header"
                    app:rcRadius="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView_memory_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="80"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:textColor="#ffff"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:text="Calculation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                    android:id="@+id/progressbar_observation"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:rcBackgroundColor="@color/colorDark"
                    app:rcIconBackgroundColor="@color/custom_progress_blue_progress"
                    app:rcIconPadding="5dp"
                    app:rcIconSize="40dp"
                    app:rcIconSrc="@drawable/ic_z_observation"
                    app:rcMax="1500"
                    app:rcProgressColor="@color/custom_progress_blue_header"
                    app:rcRadius="5dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView_observer_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="50"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
</RelativeLayout>
    </ScrollView>
</LinearLayout>
